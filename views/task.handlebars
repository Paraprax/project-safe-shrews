<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h2 id="userId" data-id="{{example.userid}}">What tasks would you like to do</h2>
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label>Task</label>
              <input type="text" id="task-name" class="form-control">
            </div>
            <div class="form-group">
              <label>unit of measurement</label>
              <textarea class="form-control" id="measurement"></textarea>
            </div>
            <div class="form-group">
              <label>Target goal</label>
              <textarea class="form-control" id="goal"></textarea>
            </div>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/user-task.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>